{
    "name": "mimir-iiif-explorer",
    "version": "1.1.0",
    "description": "Mimir IIIF explorer viewer (image, presentation, AV, and 3D) built on OpenSeadragon.",
    "type": "module",
    "main": "./dist/mimir.umd.cjs",
    "module": "./dist/mimir.es.js",
    "scripts": {
        "build": "node scripts/check-assets.js && vite build",
        "dev": "node scripts/check-assets.js && vite build --watch",
        "clean": "rm -rf dist"
    },
    "exports": {
        ".": {
            "import": "./dist/mimir.es.js",
            "require": "./dist/mimir.umd.cjs"
        },
        "./src": "./src/index.js"
    },
    "files": [
        "dist",
        "src"
    ],
    "sideEffects": false,
    "devDependencies": {
        "@google/model-viewer": "^4.1.0",
        "openseadragon": "^6.0.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "@tabler/icons": "^3.0.0"
    },
    "peerDependencies": {
        "@google/model-viewer": "^4.1.0",
        "openseadragon": "^6.0.0"
    }
}
